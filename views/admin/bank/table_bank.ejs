<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3"><%- include('add_bank.ejs') %></div>
	<div class="card-body">
		<div class="table-responsive">
			<table
				class="table table-bordered"
				id="dataTable"
				width="100%"
				cellspacing="0"
			>
				<thead>
					<tr>
						<th>No</th>
						<th>Nama Bank</th>
						<th>Nomor Rekening</th>
						<th>Nama Pemilk</th>
						<th>Gambar</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% for (let i = 0; i < bank.length; i++) { %>
					<tr>
						<td><%= i + 1 %></td>
						<td><%= bank[i].nameBank %></td>
						<td><%= bank[i].accountNumber %></td>
						<td><%= bank[i].accountHolder %></td>
						<td>
							<img
								src="https://admin-bwa-staycation-1.herokuapp.com/<%=bank[i].imageUrl %>"
								alt="gambar <%=bank[i].nameBank%>"
								width="80"
								height="50"
							/>
						</td>
						<td>
							<form
								action="/admin/bank/<%= bank[i].id %>?_method=DELETE"
								method="POST"
							>
								<!-- UPDATE BUTTON -->
								<a
									href="javascript:void()"
									type="button"
									class="
										btn btn-warning btn-circle btn-sm
										button-update
									"
									data-id="<%= bank[i].id %>"
									data-namebank="<%= bank[i].nameBank %>"
									data-accountnumber="<%= bank[i].accountNumber %>"
									data-accountholder="<%= bank[i].accountHolder %>"
								>
									<i class="fas fa-edit"></i
								></a>
								<!-- DELETE BUTTON -->

								<button
									type="submit"
									type="button"
									class="btn btn-danger btn-circle btn-sm"
								>
									<i class="fas fa-trash"></i>
								</button>
							</form>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
