<!-- DataTales Example -->
<div class="card shadow mb-4">
	<div class="card-header py-3"><%- include('add_category.ejs') %></div>
	<div class="card-body">
		<div class="table-responsive">
			<table
				class="table table-bordered"
				id="dataTable"
				width="100%"
				cellspacing="0"
			>
				<thead>
					<tr>
						<th>No</th>
						<th>Name</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					<% for (let i = 0; i < category.length; i++) { %>
					<tr>
						<td><%= i + 1 %></td>
						<td><%= category[i].name %></td>
						<td>
							<form
								action="/admin/category/<%= category[i].id %>?_method=DELETE"
								method="POST"
							>
								<!-- UPDATE BUTTON -->
								<a
									href="javascript:void()"
									type="button"
									class="
										btn btn-warning btn-circle btn-sm
										button-update
									"
									data-id="<%= category[i].id %>"
									data-name="<%= category[i].name %>"
								>
									<i class="fas fa-edit"></i
								></a>
								<!-- DELETE BUTTON -->

								<button
									type="submit"
									type="button"
									class="btn btn-danger btn-circle btn-sm"
								>
									<i class="fas fa-trash"></i>
								</button>
							</form>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
